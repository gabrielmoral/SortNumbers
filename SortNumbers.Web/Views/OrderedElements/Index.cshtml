@model IEnumerable<SortNumbers.Web.Models.OrderedElement>

@{
    ViewBag.Title = "Index";
}

<h2>Sort Numbers</h2>

<p>
    @Html.ActionLink("Create new ordination", "Create")
</p>
<p>
    <button onclick="$('#orderedNumbers').tableExport({ type: 'xml', escape: 'false' });" class="btn btn-default">
        Export to XML
    </button>
</p>
<table class="table" id="orderedNumbers">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numbers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SortDuration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numbers, new { htmlAttributes = new { @width = "300px" } })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortDuration)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<button id="export" onclick="$('#orderedNumbers').tableExport({ type: 'xml', escape: 'false' });"></button>

@section Scripts {
    @Scripts.Render("~/Scripts/tableExport.js")
    @Scripts.Render("~/Scripts/jquery.base64.js")

}